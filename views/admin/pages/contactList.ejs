<%- include ("../../_partial/_header.ejs") %>

    <div style="padding: 8% 5% 5% 5%;">

        <h3 class="display-6">Contact History</h3>


        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Message</th>
                    <th>Date & Time</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                <% contacts.forEach(function(contact) { %>

                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="ms-3">
                                    <p class="fw-bold mb-1">
                                        <%= contact.name %>
                                    </p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="text-normal mb-0">
                                <%= contact.email %>
                            </p>
                        </td>
                        <td>
                            <p class="text-normal mb-0">
                                <%= contact.message %>
                            </p>
                        </td>
                        <td>
                            <p class="text-normal mb-0">
                                <%= contact.submittedAt %>
                            </p>
                        </td>

                        <td>
                            <% if (contact.status=='responded' ) { %>
                                <span class="badge badge-success rounded-pill d-inline">
                                    <%= contact.status %>
                                </span>
                            <% } else if (contact.status=='awaiting' ) { %>
                                <span class="badge badge-warning rounded-pill d-inline">
                                    <%= contact.status %>
                                </span>
                            <% } else if (contact.status=='Onboarding' ) { %>
                                    <span class="badge badge-primary rounded-pill d-inline">
                                        <%= contact.status %>
                                    </span>
                            <% } %>
                        </td>
                        <td>
                            <button type="button" class="btn btn-link btn-sm btn-rounded">
                                Edit
                            </button>
                        </td>
                    </tr>

                    <% }) %>

            </tbody>
        </table>

    </div>

    <%- include ("../../_partial/_footer.ejs") %>