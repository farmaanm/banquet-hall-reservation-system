<%- include ("../../_partial/_header.ejs") %>

    <div style="padding: 8% 5% 5% 5%;">
        <h3 class="display-6">Events List</h3>

        <table class="table table-striped table-hover" style="background-color: white;">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>NIC</th>
                    <th>Address</th>
                    <th>Contact</th>
                    <th>Email</th>
                    <th>Hall</th>
                    <th>Date & Time</th>
                    <th>Message</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                <% reservations.forEach(function(reservation) { %>
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="ms-3">
                                    <p class="fw-bold mb-1">
                                        <%= reservation.title %>. <%= reservation.firstname %>
                                                <%= reservation.lastname %>
                                    </p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="text-normal mb-0">
                                <%= reservation.nic %>
                            </p>
                        </td>
                        <td>
                            <p class="text-normal mb-0">
                                <%= reservation.address %>
                            </p>
                        </td>
                        <td>
                            <p class="text-normal mb-0">
                                <%= reservation.contact %>
                            </p>
                        </td>
                        <td>
                            <p class="text-normal mb-0">
                                <%= reservation.email %>
                            </p>
                        </td>
                        <td>
                            <p class="text-normal mb-0">
                                <%= reservation.hallType %>
                            </p>
                        </td>
                        <td>
                            <p class="text-normal mb-0">
                                <%= reservation.eventDate %>
                                    <%= reservation.eventTime %>
                            </p>
                        </td>
                        <td>
                            <p class="text-normal mb-0" style="text-align: justify;">
                                <%= reservation.message %>
                            </p>
                        </td>
                        <td>
                            <span class="badge badge-success rounded-pill d-inline">Confirmed</span>
                            <span class="badge badge-warning rounded-pill d-inline">Awaiting</span>
                            <span class="badge badge-primary rounded-pill d-inline">Onboarding</span>
                        </td>
                        <td>
                            <button type="button" class="btn btn-link btn-sm btn-rounded">
                                Edit
                            </button>
                        </td>
                    </tr>

                <% }) %>

            </tbody>
        </table>

    </div>

<%- include ("../../_partial/_footer.ejs") %>